<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <!--<TargetFrameworks>net6.0-android;net6.0-ios;</TargetFrameworks>-->
    <TargetFrameworks>net6.0-android</TargetFrameworks>
    <RootNamespace>Maui.Controls.Compatibility</RootNamespace>
    <AssemblyName>Maui.Controls.Compatibility</AssemblyName>
    <Nullable>enable</Nullable>
    <RuntimeIdentifier Condition=" '$(TargetFramework)' == 'net6.0-ios' ">ios-x64</RuntimeIdentifier>
  </PropertyGroup>
  <PropertyGroup>
    <PackageId>Xamarin.Platform</PackageId>
    <Product>Xamarin</Product>
  </PropertyGroup>

  <ItemGroup Condition="$(TargetFramework.Contains('-android'))">
    <Compile LinkBase="Android" Include="..\Xamarin.Forms.Platform.Android\**\*.cs"></Compile>
    <AndroidResource Include="..\Xamarin.Forms.Platform.Android\Resources\Layout\BottomTabLayout.axml" Link="Android\Resources\Layout\BottomTabLayout.axml" />
    <AndroidResource Include="..\Xamarin.Forms.Platform.Android\Resources\Layout\FlyoutContent.axml" Link="Android\Resources\Layout\FlyoutContent.axml" />
    <AndroidResource Include="..\Xamarin.Forms.Platform.Android\Resources\Layout\RootLayout.axml" Link="Android\Resources\Layout\RootLayout.axml" />
    <AndroidResource Include="..\Xamarin.Forms.Platform.Android\Resources\Layout\ShellContent.axml" Link="Android\Resources\Layout\ShellContent.axml" />
    <AndroidResource Include="..\Xamarin.Forms.Platform.Android\Resources\Layout\FallbackTabbarDoNotUse.axml" Link="Android\Resources\Layout\FallbackTabbarDoNotUse.axml" />
    <AndroidResource Include="..\Xamarin.Forms.Platform.Android\Resources\Layout\FallbackToolbarDoNotUse.axml" Link="Android\Resources\Layout\FallbackToolbarDoNotUse.axml" />
    <AndroidResource Include="..\Xamarin.Forms.Platform.Android\Resources\Layout\Tabbar.axml" Link="Android\Resources\Layout\Tabbar.axml" />
    <AndroidResource Include="..\Xamarin.Forms.Platform.Android\Resources\Layout\Toolbar.axml" Link="Android\Resources\Layout\Toolbar.axml" />


    <AndroidResource Include="..\Xamarin.Forms.Platform.Android\Resources\anim\EnterFromLeft.xml" Link="Android\Resources\anim\EnterFromLeft.xml" />
    <AndroidResource Include="..\Xamarin.Forms.Platform.Android\Resources\anim\EnterFromRight.xml" Link="Android\Resources\anim\EnterFromRight.xml" />
    <AndroidResource Include="..\Xamarin.Forms.Platform.Android\Resources\anim\ExitToLeft.xml" Link="Android\Resources\anim\ExitToLeft.xml" />
    <AndroidResource Include="..\Xamarin.Forms.Platform.Android\Resources\anim\ExitToRight.xml" Link="Android\Resources\anim\ExitToRight.xml" />


    <AndroidResource Include="..\Xamarin.Forms.Platform.Android\Resources\values\styles.xml" Link="Android\Resources\values\styles.xml" />
    <AndroidResource Include="..\Xamarin.Forms.Platform.Android\Resources\values\strings.xml" Link="Android\Resources\values\strings.xml" />
    <AndroidResource Include="..\Xamarin.Forms.Platform.Android\Resources\values\attrs.xml" Link="Android\Resources\values\attrs.xml" />
  </ItemGroup>
  <ItemGroup Condition="$(TargetFramework.Contains('-ios'))">
    <Compile LinkBase="iOS" Include="..\Xamarin.Forms.Platform.iOS\**\*.cs"></Compile>
  </ItemGroup>

  <Import Project="..\..\..\..\.nuspec\Xamarin.Forms.MultiTargeting.targets" />

  <PropertyGroup>
    <!-- TODO: disable Fast Deployment temporarily -->
    <EmbedAssembliesIntoApk>true</EmbedAssembliesIntoApk>
  </PropertyGroup>


  <PropertyGroup>
    <_DotNetPackageVersion>5.0.0</_DotNetPackageVersion>
  </PropertyGroup>


  <ItemGroup>
    <PackageReference Include="System.CodeDom" Version="$(_DotNetPackageVersion)" />
    <PackageReference Include="System.Diagnostics.EventLog" Version="$(_DotNetPackageVersion)" />
    <PackageReference Include="System.Diagnostics.PerformanceCounter" Version="$(_DotNetPackageVersion)" />
    <PackageReference Include="System.IO.Ports" Version="$(_DotNetPackageVersion)" />
    <PackageReference Include="System.Security.Permissions" Version="$(_DotNetPackageVersion)" />
    <PackageReference Include="System.Threading.AccessControl" Version="$(_DotNetPackageVersion)" />
  </ItemGroup>


  <ItemGroup>
    <ProjectReference Include="..\..\..\Forms\src\Xamarin.Forms.Core\Xamarin.Forms.Core-net6.csproj" />
  </ItemGroup>
</Project>

